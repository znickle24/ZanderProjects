<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasterListFragment">

    <RelativeLayout
        android:id="@+id/rl_master_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMenuBarBackground">

        <FrameLayout
            android:id="@+id/fl_master_list_header_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_master_list_fragment_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fl_master_list_header_placeholder"
            android:scrollbars="vertical"
            />



    </RelativeLayout>

</FrameLayout>